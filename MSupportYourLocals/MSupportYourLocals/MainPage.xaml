<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSupportYourLocals.MainPage">

    <StackLayout Padding="20" Spacing="50" VerticalOptions="Center">
        <Label Text="Please login" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Sign in" BackgroundColor="YellowGreen" TextColor="White" FontAttributes="Bold" Clicked="Login"></Button>
        <Button Text="Sign up" BackgroundColor="Goldenrod" TextColor="White" FontAttributes="Bold" Clicked="SignUp"></Button>
        <Button Text="Continue" BackgroundColor="MediumTurquoise" TextColor="White" Clicked="Continue"></Button>
    </StackLayout>

</ContentPage>

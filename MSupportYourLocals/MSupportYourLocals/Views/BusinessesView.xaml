<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MSupportYourLocals.ViewModels;assembly=MSupportYourLocals"
             x:Class="MSupportYourLocals.Views.BusinessesView">
    <ContentPage.BindingContext>
        <viewModels:BusinessesViewModel></viewModels:BusinessesViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <CollectionView ItemsSource="{Binding Businesses}" SelectionMode="Single" SelectionChanged="BusinessSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HorizontalOptions="FillAndExpand" Margin="0" Padding="0">
                                <Label Text="{Binding Header}" FontSize="Large" TextColor="Black"></Label>
                                <Label Text="{Binding User.FullName}" FontSize="Large" TextColor="DarkMagenta"></Label>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
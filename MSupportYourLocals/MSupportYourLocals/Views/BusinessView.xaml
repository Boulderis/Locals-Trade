<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MSupportYourLocals.ViewModels;assembly=MSupportYourLocals"
             x:Class="MSupportYourLocals.Views.BusinessView">
    <ContentPage.BindingContext>
        <viewModels:BusinessViewModel></viewModels:BusinessViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <CollectionView ItemsSource="{Binding Business}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HorizontalOptions="FillAndExpand" Margin="0" Padding="0">
                                <Label Text="{Binding Header}" FontSize="Large" TextColor="Black"></Label>
                                <Label Text="{Binding User.FullName}" FontSize="Large" TextColor="DarkMagenta"></Label>
                                <CollectionView ItemsSource="{Binding Products}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Italic" TextColor="Blue"></Label>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
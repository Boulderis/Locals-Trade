<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSupportYourLocals.Views.RegisterUserView">

    <ScrollView>
    <StackLayout Padding="20" Spacing="50" VerticalOptions="Center">
        <Label Text="Sign up" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center"/>
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="SurnameEntry" Placeholder="Surname" />
        <Label>Birth date</Label>
        <DatePicker x:Name="BirthDate"></DatePicker>
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Sign up" BackgroundColor="Goldenrod" TextColor="White" FontAttributes="Bold"></Button>
    </StackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSupportYourLocals.Views.ChangePasswordView">

    <StackLayout>
        <Label Text="Please enter your current password" FontAttributes="Bold" FontSize="Large" />
        <Entry x:Name="CurrentPasswordEntry" Placeholder="Current Password" IsPassword="True" />
        <Label Text="Please enter your new password" FontAttributes="Bold" FontSize="Large" />
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />
        <Button Text="Change" BackgroundColor="Red" TextColor="White" FontAttributes="Bold" Clicked="Confirm" />
    </StackLayout>

</ContentPage>
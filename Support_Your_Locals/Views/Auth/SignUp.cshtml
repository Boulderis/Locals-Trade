@model Support_Your_Locals.Models.ViewModels.UserRegisterModel

@{
    Layout = "_NoNavLayout";
}

<div class="auth-container">
    <div class="container box">
        <h1>Sign Up</h1>
        <div asp-validation-summary="All">
        </div>
        @if (Model?.AlreadyExists == true)
        {
            <h5 class="bg-warning text-danger text-center">User already exists.</h5>
        }
    <form asp-action="SignUp" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input asp-for="Surname" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">BirthDate</label>
            @Html.TextBox("BirthDate", Model, new { type = "date" })
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control">
        </div>
        
        <div class="form-group">
            <a asp-action="SignIn">Already a member? Sign in</a>
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>

    </form>
    </div>
</div>

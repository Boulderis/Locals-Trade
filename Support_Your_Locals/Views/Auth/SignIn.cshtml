@model UserLoginModel
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </head>
@{
    Layout = "_NoNavLayout";
}
@if (User.Identity.IsAuthenticated) { 
    <form asp-action="SignOut" method="post">
    <button class="btn btn-light btn-lg">Sign Out</button>
    </form>
}
else { 
<div class="auth-container">
    <div class="container box">
        <h1>Sign In</h1>
        <div asp-validation-summary="All">
        </div>
        @if (Model?.NotFound == true)
        {
    <div class="alert alert-warning alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Warning!</strong> Incorrect email or password.
    </div>
        }
        <form asp-action="SignIn" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Passhash">Password</label>
                <input type="password" asp-for="Passhash" class="form-control">
            </div>
            <div class="form-group">
                <a asp-controller="Auth" asp-action="SignUp">Not a member yet? Sign up</a>
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>

        </form>
        
    </div>
</div>
}
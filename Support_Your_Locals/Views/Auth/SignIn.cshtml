@model UserLoginModel

@{
    Layout = "_NoNavLayout";
}

<div class="login-page">
    @if (Model?.NotFound == true)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong> Incorrect email or password.
        </div>
    }
<div class="form">

    @if (User.Identity.IsAuthenticated) {
        <a asp-controller="Auth" asp-action="SignOut" class="btn btn-primary btn-sm">Sign out</a>
    }
    else {
        <div class="auth-container">
            <div class="container box">
                <h1>Sign In</h1>
                <form asp-action="SignIn" method="post">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Passhash">Password</label>
                        <input type="password" asp-for="Passhash" class="form-control">
                        <span asp-validation-for="Passhash"></span>
                    </div>
                    <div class="form-group">
                        <a asp-controller="Auth" asp-action="SignUp">Not a member yet? Sign up</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Sign In</button>

                </form>
                <div class="g-signin2" data-onsuccess="onSignIn"></div>


            </div>
        </div>
    }
</div>
</div>
<meta name="google-signin-client_id" content="145107811449-c7d7rlr66uqhvq5ppv70bihhge6pljne.apps.googleusercontent.com">
<script src="https://apis.google.com/js/platform.js" async defer></script>
<script>
    function onSignIn(googleUser) {
        var profile = googleUser.getBasicProfile();
        console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
        console.log('Name: ' + profile.getName());
        console.log('Image URL: ' + profile.getImageUrl());
        console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
    }
</script>
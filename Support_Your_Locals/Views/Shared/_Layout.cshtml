<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Support Your Locals</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <a class="nicetitle" style="font-size: 20px; color: #bbe1fa" href="../">Support Your Locals</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="SignIn" class="navbar-brand ml-2">Sign In</a>
            <a asp-controller="Auth" asp-action="SignUp" class="navbar-brand ml-2">Sign Up</a>
        }
        else
        {
            <a asp-controller="Auth" asp-action="SignOut" class="btn btn-primary btn-sm">Sign out</a>
            <span style="float:right;text-align:right;margin-left: 80px;">Welcome @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value!</span>
        }
        <a asp-controller="Business" asp-action="AddAdvertisement" class="navbar-brand ml-2 navbuttons">Add advertisement</a>

    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-4">
            <vc:navigation-menu></vc:navigation-menu>
        </div>
        <div>
            <vc:search-business></vc:search-business>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>

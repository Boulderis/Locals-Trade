@using System.Text.Json
@model Business

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Header
            <span class="badge badge-pill badge-primary" style="float: right">
                <small>
                    @Model.Product
                </small>
            </span>
        </h4>
    </div>

    @{
        Business b = Model;
        b.User.Businesses = null;
        foreach (var w in b.Workdays)
        {
            w.Business = null;
        }
    }

    <form asp-action="Index" asp-controller="Business" method="get">
        <input type="hidden" name="businessId" id="businessId" value="@Model.BusinessID"/>
        <input type="hidden" name="business" id="business" value="@JsonSerializer.Serialize(b)"/>
        <span class="card-text p-1">
            @Model.User.Name
            @Model.User.Surname
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float: right">
                Go to
            </button>
        </span>
    </form>
</div>

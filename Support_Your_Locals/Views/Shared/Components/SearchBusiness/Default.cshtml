@model BusinessListViewModel

<form asp-action="Index" asp-controller="Home">
    <h4 class="text-center">Search for a business</h4>
    <div class="form-group">
        <label asp-for="SearchResponse.OwnersSurname">By Owner's Surname</label>
        <input asp-for="SearchResponse.OwnersSurname" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="SearchResponse.Header">By business header</label>
        <input asp-for="SearchResponse.Header" class="form-control"/>
    </div>
    <div class="form-group">
        <label><input type="radio" asp-for="SearchResponse.SearchInDescription" name="SearchIn" value="0"/>Search in header</label>
        <label><input type="radio" asp-for="SearchResponse.SearchInDescription" name="SearchIn" value="1"/>Search in description</label>
        <label><input type="radio" asp-for="SearchResponse.SearchInDescription" name="SearchIn" value="2"/>Search in description and header</label>
</div>
    <div class="form-group">
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[0]" />Monday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[1]" />Tuesday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[2]" />Wednesday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[3]" />Thursday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[4]" />Friday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[5]" />Saturday</label>
        <label><input type="checkbox" asp-for="SearchResponse.WeekdaySelected[6]" />Sunday</label>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

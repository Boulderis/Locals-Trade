@model BusinessListViewModel

<form id="searchForm" asp-action="Index" asp-controller="Home" onsubmit="setQuery()">
    <h4 class="text-center">Search for a business</h4>
    <div class="form-group">
        <label asp-for="SearchResponse.OwnersSurname">By owner's surname</label>
        <input asp-for="SearchResponse.OwnersSurname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SearchResponse.BusinessInfo">By business's info</label>
        <input asp-for="SearchResponse.BusinessInfo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SearchResponse.SearchIn">Select a search mode</label>
        <select asp-for="SearchResponse.SearchIn">
            <option value="0">Search only in header</option>
            <option value="1">Search only in description</option>
            <option value="2">Search in description and header</option>
        </select>
    </div>
    <div class="form-group">
        @for (var i = 0; i < 7; i++) {
            <label><input asp-for="SearchResponse.WeekdaySelected[i]" />@DayNames.days[i]</label>
        }
    </div>
    <div class="form-group">
        <label asp-for="SearchResponse.OpenFrom">Open From</label>
        <input asp-for="SearchResponse.OpenFrom" value="@Model.SearchResponse.OpenFrom.TimeOfDay" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="SearchResponse.OpenTo">Open To</label>
        <input asp-for="SearchResponse.OpenTo" value="@Model.SearchResponse.OpenTo.TimeOfDay" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<script>
    var header = "@nameof(SearchResponse)";
    var ownersSurname = header + "_" + "@nameof(SearchResponse.OwnersSurname)";
    var businessInfo = header + "_" + "@nameof(SearchResponse.BusinessInfo)";
    var searchIn = header + "_" + "@nameof(SearchResponse.SearchIn)";
    var weekdaySelected = header + "_" + "@nameof(SearchResponse.WeekdaySelected)";
    var openFrom = header + "_" + "@nameof(SearchResponse.OpenFrom)";
    var openTo = header + "_" + "@nameof(SearchResponse.OpenTo)";

    function setQuery() {
        var os = "os=" + document.getElementById(ownersSurname).value;
        var bi = "bi=" + document.getElementById(businessInfo).value;
        var si = "si=" + document.getElementById(searchIn).value;
        var w = "w=";
        for (var i = 0; i < 7; i++) {
            var current = weekdaySelected + "_" + i + "_";
            var value = document.getElementById(current).checked;
            var numericChar = value ? '1' : '0';
            w += numericChar;
        }
        var f = "f=" + document.getElementById(openFrom).value;
        var t = "t=" + document.getElementById(openTo).value;

        var query = "/?" + os + "&" + bi + "&" + si + "&" + w + "&" + f + "&" + t;
        document.forms["searchForm"].action = document.forms["searchForm"].action + query;
        return true;
    }
</script>
